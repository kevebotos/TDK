{
  "tasks": [
    {
      "type": "shell",
      "label": "CMake Build",
      "command": "make",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build using CMake and Make"
    },
    {
      "type": "shell",
      "label": "CMake Configure",
      "command": "cmake",
      "args": [".."],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "problemMatcher": [],
      "group": "build",
      "detail": "Configure CMake project"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: clang build active file",
      "command": "/usr/bin/clang++",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "-std=c++17",
        "-I/opt/homebrew/opt/eigen/include/eigen3",
        "-I/opt/homebrew/opt/gmsh/include",
        "-I${workspaceFolder}/src",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-L/opt/homebrew/opt/gmsh/lib",
        "-lgmsh"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "Task with correct include paths for headers"
    }
  ],
  "version": "2.0.0"
}